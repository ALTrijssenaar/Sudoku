{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Start Backend API",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "prelaunch: prepare debug",
      "program": "${workspaceFolder}/src/Sudoku.Api/bin/Debug/net9.0/Sudoku.Api.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/Sudoku.Api",
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "ASPNETCORE_URLS": "https://localhost:5001;http://localhost:5000",
        "ASPNETCORE_Kestrel__Certificates__Default__Path": "${workspaceFolder}/certs/aspnetcore-devcert.pfx",
        "ASPNETCORE_Kestrel__Certificates__Default__Password": "${env:SUDOKU_DEV_CERT_PASSWORD}"
      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach"
    },
    {
      "name": "Start Frontend UI",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "Start Frontend UI",
      "program": "${workspaceFolder}/src/Sudoku.UI/bin/Debug/net9.0/Sudoku.UI.dll",
      "args": [],
      "cwd": "${workspaceFolder}/src/Sudoku.UI",
      "stopAtEntry": false,
      "console": "integratedTerminal",
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development"
      }
    }
  ],
  "compounds": [
    {
      "name": "Start Backend & Frontend Together",
      "configurations": [
        "Start Backend API",
        "Start Frontend UI"
      ]
    }
  ]
}
