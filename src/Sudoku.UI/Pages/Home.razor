@page "/"
@inject AuthService AuthService
@inject NavigationManager Navigation

<PageTitle>Sudoku Platform</PageTitle>

<MudContainer MaxWidth="MaxWidth.Large" Class="mt-8">
    <MudGrid Justify="Justify.Center">
        <MudItem xs="12" md="8">
            <MudPaper Elevation="0" Class="pa-8 text-center">
                <MudIcon Icon="@Icons.Material.Filled.Grid3x3" Size="Size.Large" Color="Color.Primary" Class="mb-4" Style="font-size: 5rem;" />
                
                <MudText Typo="Typo.h2" GutterBottom="true">
                    Welcome to Sudoku Platform
                </MudText>
                
                <MudText Typo="Typo.h5" Color="Color.Secondary" Class="mb-6">
                    Challenge your mind with classic Sudoku puzzles
                </MudText>
                
                <MudText Typo="Typo.body1" Class="mb-6">
                    Play Sudoku online with multiple difficulty levels. Save your progress, 
                    resume anytime, and track your solving history!
                </MudText>

                <AuthorizeView>
                    <Authorized>
                        <MudButton Variant="Variant.Filled" 
                                   Color="Color.Primary" 
                                   Size="Size.Large"
                                   Href="/dashboard"
                                   StartIcon="@Icons.Material.Filled.Dashboard">
                            Go to Dashboard
                        </MudButton>
                    </Authorized>
                    <NotAuthorized>
                        <MudStack Row="true" Spacing="4" Justify="Justify.Center">
                            <MudButton Variant="Variant.Filled" 
                                       Color="Color.Primary" 
                                       Size="Size.Large"
                                       Href="/register"
                                       StartIcon="@Icons.Material.Filled.PersonAdd">
                                Get Started
                            </MudButton>
                            
                            <MudButton Variant="Variant.Outlined" 
                                       Color="Color.Primary" 
                                       Size="Size.Large"
                                       Href="/login"
                                       StartIcon="@Icons.Material.Filled.Login">
                                Login
                            </MudButton>
                        </MudStack>
                    </NotAuthorized>
                </AuthorizeView>

                <MudDivider Class="my-8" />

                <MudGrid>
                    <MudItem xs="12" sm="4">
                        <MudIcon Icon="@Icons.Material.Filled.Psychology" Size="Size.Large" Color="Color.Primary" />
                        <MudText Typo="Typo.h6" Class="mt-2">Challenge Your Mind</MudText>
                        <MudText Typo="Typo.body2">
                            Multiple difficulty levels to keep you engaged
                        </MudText>
                    </MudItem>
                    
                    <MudItem xs="12" sm="4">
                        <MudIcon Icon="@Icons.Material.Filled.Save" Size="Size.Large" Color="Color.Primary" />
                        <MudText Typo="Typo.h6" Class="mt-2">Save & Resume</MudText>
                        <MudText Typo="Typo.body2">
                            Pick up right where you left off
                        </MudText>
                    </MudItem>
                    
                    <MudItem xs="12" sm="4">
                        <MudIcon Icon="@Icons.Material.Filled.History" Size="Size.Large" Color="Color.Primary" />
                        <MudText Typo="Typo.h6" Class="mt-2">Track Progress</MudText>
                        <MudText Typo="Typo.body2">
                            View your complete solving history
                        </MudText>
                    </MudItem>
                </MudGrid>
            </MudPaper>
        </MudItem>
    </MudGrid>
</MudContainer>
