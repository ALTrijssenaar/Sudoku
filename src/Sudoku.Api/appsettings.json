{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=${DB_HOST:-localhost};Port=${DB_PORT:-5432};Database=${DB_NAME:-sudoku};Username=${DB_USER:-sudoku_user};Password=${DB_PASSWORD:-sudoku_password}"
  },
  "Jwt": {
    "Secret": "${JWT_SECRET}",
    "Issuer": "${JWT_ISSUER:-SudokuApi}",
    "Audience": "${JWT_AUDIENCE:-SudokuClient}",
    "ExpiryMinutes": "${JWT_EXPIRY_MINUTES:-60}"
  }
}
